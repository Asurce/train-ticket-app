    <AutoCompleteTextView
        android:id="@+id/originACTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/from"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitleTextView"
        app:layout_constraintVertical_bias="0.1" />

    <AutoCompleteTextView
        android:id="@+id/destACTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/destination"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/originACTV"
        app:layout_constraintVertical_bias="0.1"/>

    <LinearLayout
        android:id="@+id/whenLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destACTV"
        app:layout_constraintVertical_bias="0.1">

        <Button
            android:id="@+id/dateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/calendar"
            android:text="@string/placeholder" />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:drawableEnd="@drawable/clock"
            android:text="@string/placeholder" />
    </LinearLayout>

    <TextView
        android:id="@+id/discountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discounts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whenLinearLayout"
        app:layout_constraintVertical_bias="0.1" />

    <RadioGroup
        android:id="@+id/discountRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountTextView"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/noDiscountRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nincs" />

        <RadioButton
            android:id="@+id/fiftyDiscountRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%" />

        <RadioButton
            android:id="@+id/ninetyDiscountRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90%" />

    </RadioGroup>

    <TextView
        android:id="@+id/classTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helyjegy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountRadioGroup"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/classRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classTextView"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/fastTrainRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gyorsvonat" />

        <RadioButton
            android:id="@+id/secondClassRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. osztály" />

        <RadioButton
            android:id="@+id/firstClassRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. osztály" />

    </RadioGroup>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classRadioGroup"
        app:layout_constraintVertical_bias="0.1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchButton"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/loginOrTicketButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/logout" />
    </LinearLayout>

    <include
        android:id="@+id/loading_spinner"
        layout="@layout/loading_spinner"/>

</androidx.constraintlayout.widget.ConstraintLayout>